<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.schollaert.mybooks.MenuActivity">


    <Button
        android:id="@+id/meButton"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
        android:textColor="?android:attr/colorControlActivated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/monProfil"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/myFriendsButton"
        android:drawableBottom="@drawable/ic_person_black_24dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/findBookButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/RechercherLivre"
        android:drawableBottom="?android:attr/actionModeFindDrawable"
        android:layout_alignParentTop="false"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:elevation="0dp"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
        android:textColor="?android:attr/colorControlActivated"
        android:textSize="18sp" />

    <Button
        android:id="@+id/myBooksButton"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
        android:textColor="?android:attr/colorControlActivated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/Meslivres"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/findBookButton"
        android:drawableBottom="@drawable/boook_24dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/myFriendsButton"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
        android:textColor="?android:attr/colorControlActivated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/myFriends"
        android:layout_marginTop="19dp"
        android:drawableBottom="@drawable/ic_people_black_24dp"
        android:layout_below="@+id/myBooksButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_out"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
        android:textColor="?android:attr/colorControlActivated"

        android:drawableBottom="@android:drawable/ic_lock_power_off"
        android:layout_marginTop="19dp"
        android:textSize="18sp"
        android:layout_below="@+id/meButton"
        android:layout_alignLeft="@+id/meButton"
        android:layout_alignStart="@+id/meButton" />


</RelativeLayout>

