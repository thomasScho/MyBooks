<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context="fr.schollaert.mybooks.fragment.BookDescriptionFragment"
    android:layout_height="wrap_content"
    android:padding="17dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="Android Development"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:text="Place pour les commentaires"
        android:id="@+id/tvCommentTitle"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="19dp"/>

    <ListView
        android:layout_width="316dp"
        android:layout_height="177dp"
        style="@style/Widget.AppCompat.ListView"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="19dp"
        android:id="@+id/lvBookComments" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/et_yourComment"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="19dp"
        android:hint="@string/VotreCom"/>

    <Button
        android:text="@string/Envoyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnValider"
        android:drawableBottom="@drawable/ic_menu_send"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="19dp"
        android:layout_gravity="center"
        style="@android:style/Widget.Material.Button.Colored"
        android:textAlignment="center" />

</LinearLayout>